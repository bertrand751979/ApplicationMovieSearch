<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <TextView
        android:id="@+id/titre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="100dp"
        android:outlineSpotShadowColor="#978A8F"
        android:text="APPLICATION MOVIES"
        android:textAlignment="center"
        android:textColor="#FBF9F9"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_text_user_name"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_below="@+id/titre"
        android:layout_centerInParent="true"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:ems="10"
        android:hint=" Entrez votre Login: "
        android:singleLine="true"
        android:textColor="#FCFAFA"
        android:textColorHint="#FCFAFA"
        android:textSize="16dp" />

    <EditText
        android:singleLine="true"
        android:id="@+id/edit_text_user_password"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_below="@+id/edit_text_user_name"
        android:layout_centerInParent="true"
        android:layout_marginTop="29dp"
        android:background="@drawable/edit"
        android:ems="10"
        android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
        android:hint=" Entrez votre Mot de Passe: "
        android:textColorHint="#FCFAFA"
        android:textColor="#FCFAFA"
        android:textSize="16dp"/>

    <ImageView
        android:id="@+id/button_login"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_below="@+id/edit_text_user_password"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:background="@drawable/edit_button"
        android:text="Login"/>


    <TextView
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_below="@+id/edit_text_user_password"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:background="@drawable/edit_button"
        android:textSize="21dp"
        android:textStyle="bold"
        android:text="CONNEXION"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textview_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_login"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:fontFamily="sans-serif-light"
        android:text="Pas encore inscrit(e)? Cliquez ici!"
        android:textColor="#FCFDFD"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/djams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_register"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-light"
        android:text="Powered by BERTRAND"
        android:textColor="#FAFBFB"
        android:textSize="9dp"
        android:textStyle="bold"/>

</RelativeLayout>